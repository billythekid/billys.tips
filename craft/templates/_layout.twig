{% spaceless %}
<!DOCTYPE html>
  <html>
  <head>
    <meta charset="utf-8">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <title>{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}</title>
    <link rel="home" href="{{ siteUrl }}">
    <link rel="stylesheet" type="text/css" href="{{ url('assets/css/style.css') }}">
  </head>
  <body>

    <div class="container">
      <header id="header">
        <h1><a href="{{ siteUrl }}">{{ siteName }}</a></h1>
        <nav>
          <ul>
            <li>
              <a href="{{ url('tips') }}"{% if craft.request.firstSegment== 'tips' %} class="active"{% endif %}>See All Tips</a>
            </li>
          </ul>
        </nav>
        <div class="clearfix"></div>
      </header>
      <div id="content" class="{{ class ?? '' }}">
        {% block content %}
          <p>If you see me, you haven’t set your
            <code class="language-php">{% verbatim %}{% block content %}…{% endblock %}{% endverbatim %}</code> yet.</p>
          <p>See Twig’s <a href="http://twig.sensiolabs.org/doc/templates.html#template-inheritance">Template
              Inheritance</a> documentation for an explanation.</p>
        {% endblock %}
      </div>
      <footer id="footer">© {{ now.year }} {{ siteName }}.</footer>
    </div>

    {# Prism is used for code indenting, keeeeeeeep #}
    <script src="{{ url('assets/js/prism.js') }}"></script>
    {% if entry is defined and entry.konami is not empty %}
      <script src="{{ url('scripts/') ~ "?ver=" ~ entry.id }}"></script>
    {% endif %}

  </body>
</html>
{% endspaceless %}