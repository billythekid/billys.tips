{% extends "_layout" %}

{% block content %}
  <div class="superlist">
    <p>
      {% for tip in craft.entries.section("tips") %}
        <a href="{{ tip.url }}" onmouseover="body.style.backgroundImage = 'url({{ tip.backgroundImage.first.url ?? siteUrl ~ "" }})'">{{ tip.title|title }}</a>
      {% endfor %}
     </p>
   </div>
  <div class="whatTheFuckIsBillysTips">{{ entry.body }}</div>
{% endblock %}
