# http://craftcms.com/docs/routing
#}

{% extends "_layout" %}
{% set title = "Tips" %}

{% block content %}
  <h2>Tips</h2>
  <hr class="heading-line">
  {% paginate craft.entries.section('tips').limit(6) as pageInfo, tips %}

  <div class="articles row">
    {% if tips is not empty %}
      {% for tip in tips %}
        <div class="col-xs-12 col-sm-6 col-md-4 mb-2">
          {% include '_partials/tipCard' %}
        </div>
      {% endfor %}
    {% else %}
      <div>
        <h3>No tips found!</h3>
        <p>Come back after the next Aberdeen PHP meeting for more.</p>
      </div>
    {% endif %}
  </div>

  {% include '_partials/pagination' %}
{% endblock %}
