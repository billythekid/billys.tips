# http://craftcms.com/docs/routing
#}

{% extends "_layout" %}
{% set title = "Tips" %}

{% block content %}
  <h1>Tips</h1>
  {% set tips = craft.entries.section('tips').find() %}
  {% if tips is not empty %}
    {% for tip in tips %}
      <article>
        <h3><a href="{{ tip.url }}">{{ tip.title }}</a></h3>
        <p>Posted on {{ tip.postDate.format('F d, Y') }}</p>
        {{ tip.body.getPage(1) }}
        <p><a href="{{ tip.url }}">Continue reading</a></p>
      </article>
    {% endfor %}
  {% else %}
    <article>
      <h3>No tips found!</h3>
      <p>Come back after the next Aberdeen PHP meeting for more.</p>
    </article>
  {% endif %}
{% endblock %}
